---
import Badge from "./Badge.astro";

const { badges = [] } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {
    badges.map((badge: { icon: any; name: string }) => (
      <span
        class={`flex items-center gap-1 px-2 py-1 text-xs font-medium text-white border-[1px] border-gray-700 rounded-full`}
      >
        <badge.icon class="w-4 h-4" />
        {badge.name}
      </span>
    ))
  }
</div>
