---
import { Image } from "astro:assets";
const { url, alt } = Astro.props;
---

<div
  class="relative overflow-clip rounded-xl hover:border-emerald-500 border-[1px] border-gray-700 duration-300"
>
  <Image
    src={url}
    alt={alt}
    class="md:max-w-xs rounded-xl shadow-md transition delay-150 duration-300 ease-in-out hover:-translate-y-1 hover:scale-120"
  />
</div>
