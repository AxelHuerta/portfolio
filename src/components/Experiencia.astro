---
import { TAGS } from "../lib/tags";
import Badges from "./ui/Badges.astro";

const EXPERIENCIA = [

{
    date: "Julio 2024 - Presente", 
    title: "Desarrollador Frontend",
    place: "UAM-I",
    description:
      "Evolución del frontend del sistema SOSCOSIB. Arquitectura de componentes, diseño UX/UI y conexión con el API REST.",
    badages: [TAGS.NEXTJS, TAGS.REACT, TAGS.TYPESCRIPT, TAGS.FIGMA],
  },

  {
    date: "Enero 2024 - Junio 2024",
    title: "Desarrollador Full-Stack",
    place: "UAM-I",
    description:
      "Fase inicial del proyecto SOSCOSIB (para el área médica de la UAM-I). Diseño de arquitectura, desarrollo de API REST y modelado de datos.",
    badages: [ TAGS.SPRINGBOOT, TAGS.JAVA, TAGS.POSTGRESQL, TAGS.MONGODB],
  },
  {
    date: "Febrero 2024 - Agosto 2024",
    title: "Desarrollador Backend",
    place: "UAM-I",
    description:
      "Colaboré en el desarrollo de un sistema de gestión de préstamos de dispositivos, para reemplazar un software obsoleto.",
    badages: [TAGS.LARAVEL],
  },
];
---

<ol class="relative border-s border-gray-200 dark:border-gray-700">
   {EXPERIENCIA.map((item) => 
  (
<li class="mb-20 ms-4">
  <!-- dot -->
  <div
    class="absolute w-3 h-3 bg-emerald-500 rounded-full mt-1.5 -start-1.5 border border-green-300"
  >
  </div>
  <div class="grid md:grid-cols-2 gap-4">
    <div>
      <h3 class="font-bold capitalize text-emerald-500 text-xl">
        {item.title}
      </h3>

      <h4 class="font-semibold">{item.place}</h4>
      <time
        class="text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
        >{item.date}</time
      >
      
      <div class="mt-3">
        <Badges badges={item.badages} /> 
      </div>
    </div>
    <p class="font-normal text-pretty text-gray-500 dark:text-gray-400 mt-8">
      {item.description}
    </p>
  </div>
</li>
  ))}
</ol>
